# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=不止一间自习室
APP_VERSION=1.0.0

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=zishi
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=90d

# 微信小程序配置
WX_APP_ID=your_wechat_app_id
WX_APP_SECRET=your_wechat_app_secret

# 微信支付配置
WX_MCH_ID=your_merchant_id
WX_MCH_KEY=your_merchant_key
WX_NOTIFY_URL=https://yourdomain.com/api/v1/payment/notify

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# 短信配置（可选）
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=自习室预订
SMS_TEMPLATE_CODE=SMS_123456789

# 邮件配置（可选）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@example.com
MAIL_PASS=your_mail_password
MAIL_FROM=不止一间自习室 <noreply@example.com>

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 安全配置
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 第三方服务配置
# 地图服务API Key（高德地图/百度地图/腾讯地图）
MAP_API_KEY=your_map_api_key

# 对象存储配置（阿里云OSS/腾讯云COS/七牛云）
OSS_ACCESS_KEY=your_oss_access_key
OSS_SECRET_KEY=your_oss_secret_key
OSS_BUCKET=your_bucket_name
OSS_REGION=your_region
OSS_DOMAIN=https://your-cdn-domain.com

# 推送服务配置（极光推送/个推）
PUSH_APP_KEY=your_push_app_key
PUSH_MASTER_SECRET=your_push_master_secret

# 监控配置
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=zishi:

# 业务配置
DEFAULT_CITY=北京
MIN_BOOKING_DURATION=60
MAX_BOOKING_DURATION=720
BOOKING_ADVANCE_DAYS=7
CANCEL_DEADLINE_HOURS=2